@using MvcStok.Models.Enditiy;
@model List<TBLURUNLER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>ÜRÜN ID</th>
        <th>ÜRÜN AD</th>
        <th>MARKASI</th>
        <th>KATEGORİ</th>
        <th>FİYAT</th>
        <th>STOK</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    <tbody>
        @foreach (var urn in Model)
        {
        <tr>
            <td>@urn.URUNID</td>
            <td>@urn.URUNAD</td>
            <td>@urn.MARKA</td>
            <td>@urn.TBLKATEGORILER.KATEGORIAD</td>
            <td>@urn.FİYAT</td>
            <td>@urn.STOK</td>
            <td><a href="/KATEGORI/SIL/@urn.URUNID" class="btn btn-danger">SİL</a></td>
            <td><a href="/KATEGORI/GUNCELLE/@urn.URUNID" class="btn btn-success">GÜNCELLE</a></td>
        </tr>
         
        }
    </tbody>
</table>
<a href="/Urun/UrunEkle/" class="btn btn-primary ">YENİ ÜRÜN EKLE</a>
